{
    "manifest_version": 3,
    "name": "Codeforces Contest Tracker & Rank Notifier",
    "version": "1.0.0",
    "description": "Track upcoming Codeforces contests and get real-time notifications. Monitor your rating and last contest performance.",
    "permissions": [
        "storage",
        "notifications",
        "alarms"
    ],
    "host_permissions": [
        "https://codeforces.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "Codeforces Tracker"
    },
    "icons": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    }
}